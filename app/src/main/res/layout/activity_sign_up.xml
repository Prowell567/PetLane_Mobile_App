<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="SIGN UP"
        android:textColor="#FFFFFFFF"
        android:textAlignment="center"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="165dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:srcCompat="@drawable/pet_lane_logo" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:background="@drawable/template"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Create Account"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="#FF000000"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textColor="#FF000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>


        <EditText
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextUsername"
            android:hint="Pet Lane"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="#FF000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextEmail"
            android:hint="Pet Care Store"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textColor="#FF000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextPassword"
            android:textSize="20sp"
            android:hint="*******"
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:text="CONFIRM PASSWORD"
            android:textColor="#FF000000"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextConfirmPass"
            android:textSize="20sp"
            android:hint="*******"
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By signing up you agree to our Terms Conditions and Privacy Policy."
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textAlignment="center"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/btnSignUp"
            android:background="@drawable/notsoround_button"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>