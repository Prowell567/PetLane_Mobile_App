<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_marginTop="79dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="165dp"
        app:srcCompat="@drawable/back" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="606dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_bg1"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/confirm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Order Successful"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="Thank you for your purchase. Your order is being queued for confirmation."
            android:textColor="#868686" />


        <Button
            android:id="@+id/button2"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/notsoround_button"
            android:text="CHECK STATUS"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="453dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>