<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECKOUT COUNTER"
        android:textColor="#FFFFFFFF"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="165dp"
        app:srcCompat="@drawable/back" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="606dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/white_bg1"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:textAlignment="center">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="11dp"
            android:background="@color/lightpink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="195dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/white_bg3"
            android:backgroundTint="@color/lightpink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/PaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method:"
                android:textColor="#808080"
                android:fontFamily="@font/poppins_semibold"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="15dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/DeliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Delivery Fee:"
                android:textColor="#808080"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="39dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Delivery Fee:"
                android:textColor="#808080"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="39dp" />

            <TextView
                android:id="@+id/EstimatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Estimated Time Delivery:"
                android:textColor="#808080"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="63dp" />

            <TextView
                android:id="@+id/CashOnDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Cash on Delivery"
                android:textColor="#FF000000"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="243dp"
                tools:layout_editor_absoluteY="15dp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₱25.00"
                android:textColor="#FF000000"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="243dp"
                tools:layout_editor_absoluteY="39dp" />

            <TextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="10-15 minutes"
                android:textColor="#FF000000"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="243dp"
                tools:layout_editor_absoluteY="63dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:background="@color/verylightgray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Items:"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="15dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="2"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="15dp"
                tools:ignore="MissingConstraints" />



            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:text="Fee:"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="40dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₱25.00"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="40dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/notsoround_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="PLACE ORDER"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="26dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Total:"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="64dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="₱39.00"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="64dp"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>