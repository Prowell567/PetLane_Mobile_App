<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/pink"
    tools:context=".Activities.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="SIGN UP"
        android:textColor="#FFFFFFFF"
        android:textAlignment="center"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="165dp"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:srcCompat="@drawable/pet_lane_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:background="@drawable/template"
            android:backgroundTint="@color/white"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Create Account"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:textSize="24sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:textColor="#FF000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>


            <EditText
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:id="@+id/EditTextUsername"
                android:hint="Pet Lane"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="#FF000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:id="@+id/EditTextEmail"
                android:hint="Pet Care Store"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textColor="#FF000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:id="@+id/EditTextPassword"
                android:textSize="20sp"
                android:hint="*******"
                android:inputType="textPassword"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:text="CONFIRM PASSWORD"
                android:textColor="#FF000000"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/EditTextConfirmPass"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="*******"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textColor="#FF000000"
                android:text="FIRST NAME" />

            <EditText
                android:id="@+id/EditTextFirstName"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="Pet Lane"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#FF000000"
                android:text="LAST NAME" />

            <EditText
                android:id="@+id/EditTextLastName"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="Pet Care Store"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#FF000000"
                android:text="ADDRESS" />

            <EditText
                android:id="@+id/EditTextAddress"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="Pet Care Store"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="#FF000000"
                android:text="CONTACT NO." />

            <EditText
                android:id="@+id/EditTextContactNo"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="Pet Care Store"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By signing up you agree to our Terms Conditions and Privacy Policy."
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/notsoround_button"
                android:text="CREATE"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>